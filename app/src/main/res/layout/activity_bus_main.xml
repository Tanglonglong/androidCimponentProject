<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusMainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP壳"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是APP壳页面"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 左侧按钮 -->
    <Button
        android:id="@+id/btn_module1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="模块1Top新闻"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_module2"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- 中间按钮 -->
    <Button
        android:id="@+id/btn_module2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="模块2笑话大全"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_module1"
        app:layout_constraintRight_toLeftOf="@+id/btn_module3" />

    <!-- 右侧按钮 -->
    <Button
        android:id="@+id/btn_module3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="模块3足球赛事"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_module2"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>